<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="Cuyahoga.Modules.ECommerce" namespace="Cuyahoga.Modules.ECommerce.Domain">
  <class name="Category" table="Ecommerce_Category" lazy="true">

    <id name="_Categoryid" column="categoryID" type="Int64" unsaved-value="0">
      <generator class="native"/>
    </id>
    <property column="categoryName" type="String" name="_CategoryName" not-null="true" length="128" />
    <property column="categoryDescription" type="String" name="_CategoryDescription" not-null="true" length="1024" />
    <property column="sortOrder" type="Int16" name="_SortOrder" not-null="true" />
    <property column="isPublished" type="Boolean" name="_IsPublished" not-null="true" />
    <!-- arguably all this image stuff should be normalised and out into a seperate table, going to leave it here for performance reasons though.-->

    <property column="imageUrl" type="String" name="_ImageUrl" length="128" />
    <property column="width" type="Int16" name="_Width" />
    <property column="height" type="Int16" name="_Height" />
    <property column="altText" type="String" name="_AltText" length="128" />
    <property column="cssClass" type="String" name="_CssClass" length="128" />
    <property column="inserttimestamp" type="DateTime" name="_Inserttimestamp" not-null="true" />
    <property column="updatetimestamp" type="DateTime" name="_Updatetimestamp" not-null="true" />

    <property column="tylosandImageUrl" type="String" name="_TyloSandImageUrl" length="128" />
    <!-- arguably all this Kit stuff should be normalised and out into a seperate table, going to leave it here for performance reasons though.-->
    <property column="KitPicture" type="String" name="KitPicture" length="128" />
    <property column="KitDescription" type="String" name="KitDescription" length="128" />
    <property column="priceChangePercent" type="Decimal" name="PriceChangePercent" not-null="false" />
   
    <!-- arguably all this flash stuff should be normalised and out into a seperate table, going to leave it here for performance reasons though.-->
    <property column="flashAnimationUrl" type="String" name="FlashUrl" length="128" />
    <property column="flashAnimationQuality" type="String" name="FlashQuality" length="128" />
    <property column="flashAnimationWidth" type="Int16" name="FlashWidth" />
    <property column="flashAnimationHeight" type="Int16" name="FlashHeight" />
    <property column="flashAnimationAltText" type="String" name="FlashAltText" length="128" />
    <property column="flashAnimationBackgroundColour" type="String" name="FlashBackgroundColour" length="7" />
    
    <many-to-one name="_ParentCategoryid" column="parentCategoryID" class="Category" />
    <bag name="Links">
      <key column="Categoryid"/>
      <one-to-many class="CategoryLink"/>
    </bag>
    
  </class>
</hibernate-mapping>